<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Souq" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlue</item>
        <item name="colorOnPrimary">@color/neutralDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/neutralDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView.ChangeFontFamily"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="spinner.ChangeFontFamily"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="BottomNavigationView.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="RatingBar.YellowStyle" parent="Theme.AppCompat">
        <item name="colorAccent">#FFC833</item>
        <item name="colorControlNormal">@color/gray</item>
<!--        <item name="colorControlNormal">@color/shimmerBgColor</item>-->
<!--        <item name="colorControlActivated">#FFC833</item>-->
    </style>

    <style name="AppTheme.ToolbarFont" parent="Widget.AppCompat.Toolbar">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
</resources>