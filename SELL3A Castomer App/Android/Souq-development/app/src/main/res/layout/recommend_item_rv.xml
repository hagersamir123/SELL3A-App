<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fav_cardView"
    android:layout_width="@dimen/_126sdp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardPreventCornerOverlap="true"
    tools:ignore="RtlCompat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_product_sale_iv"
            android:layout_width="@dimen/_102sdp"
            android:layout_height="@dimen/_102sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_102sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/womem_bag"
            app:layout_constraintCircleRadius="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/product_name_sale_tc"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="@dimen/_102sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:gravity="top|start"
            android:lineHeight="@dimen/_14sdp"
            android:maxLines="2"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product_sale_iv"
            tools:text="Nike Air Max 270 React ENG" />

        <TextView
            android:id="@+id/cost_sale_tv"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_27sdp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="@color/primaryBlue"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_name_sale_tc"
            tools:text="$299,43" />

        <TextView
            android:id="@+id/old_cost_sale_tv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/gray"
            android:textSize="@dimen/_8ssp"
            android:foreground="@drawable/strikethrough_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cost_sale_tv"
            app:layout_constraintTop_toBottomOf="@+id/cost_sale_tv"
            tools:text="$534,33" />

        <TextView
            android:id="@+id/off_percentage_sale_tv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="#FB7181"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toBottomOf="@+id/old_cost_sale_tv"
            app:layout_constraintStart_toEndOf="@+id/old_cost_sale_tv"
            app:layout_constraintTop_toTopOf="@+id/old_cost_sale_tv"
            tools:text="24% Off" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>